<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./part/head %>
</head>
<body class="container">

    <header>
        <% include ./part/header %>
    </header>

    <main>
        <div class="jumbotron">
            <h1>User Management</h1>
            <p>Welcome <%= user.info.firstName %>!<br/>
            You are authorised to manage
                <% if(user.auth.modifyAllUsers){ %>
                    all users!
                <% } else if(user.auth.modifyStoreUsers){ %>
                    your stores users!
                <% }%>
            </p>
        </div>
        <div class="panel-group" id="settingsPane">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title"><a href="/addUser"><button class="btn btn-warning">Add User</button> </a></h2>

                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Filter">
                                        <span class="input-group-btn">
                                            <button class="btn btn-secondary" type="button">Go!</button>
                                        </span>
                                    </div>
                                </th>
                            </tr>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Store Number</th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% userList.forEach(function (u) {  %>
                                <tr>
                                    <td><%= u.info.firstName %></td>
                                    <td><%= u.info.lastName %></td>
                                    <td><%= u.store %></td>
                                    <td><a href="/editUser/<%= u._id %>"><button class="btn button-success">Edit</button> </a> </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
                <div class="panel-body">

                </div>
            </div>
        </div>
    </main>

    <footer>
        <% include ./part/footer %>
    </footer>

</body>
</html>