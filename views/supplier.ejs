<% include fullHead.ejs %>
<script type="text/javascript" src="/static/js/supplier.js"></script>
<main>
    <div class="jumbotron">
        <h1>Supplier Management</h1>
        <p>Welcome <%= user.info.firstName %>!</p>
    </div>
    <div class="panel-group" id="settingsPane">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title"><a href="/supplier/add"><button class="btn btn-warning">Add a Supplier</button> </a></h2>
                <h4>Search Stock</h4>
                <table class="table table-condensed">
                    <thead>
                    <tr>
                        <th>
                            <div class="input-group">
                                <input type="text" name="filter" class="form-control" onkeyup="search(this.value)" placeholder="Filter (Name/Barcode)">
                                <span class="input-group-btn">
                                    <button class="btn btn-secondary" type="button">Go!</button>
                                </span>
                            </div>

                        </th>
                        <th>
                            <nav aria-label="Page navigation example">
                                <ul class="pagination">
                                    <li class="page-item"><a class="page-link" href="#" name="page_prev">Previous</a></li>
                                    <li class="page-item"><a class="page-link" href="#" name="page_current">1</a></li>
                                    <li class="page-item"><a class="page-link" href="#" name="page_next">Next</a></li>
                                </ul>
                            </nav>
                        </th>
                    </tr>
                    <tr>
                        <th>Supplier</th>
                        <th>Code</th>
                        <th><button class="btn btn-primary">View</button></th>
                        <th><button class="btn btn-warning">Edit</button> </th>
                    </tr>
                    </thead>
                    <tbody name="stockTable">

                    </tbody>
                </table>
            </div>
            <div class="panel-body">

            </div>
        </div>
    </div>
</main>

<footer>
    <% include ./part/footer %>
</footer>

</body>
</html>